<?xml version="1.0" encoding="utf-8"?>
<resources>
  <color name="skylight_dawn">@color/skylight_lightPurple</color>
  <color name="skylight_sunrise">@color/skylight_amber_dark</color>
  <color name="skylight_sunset">@color/skylight_deepRed_extraDark</color>
  <color name="skylight_dusk">@color/skylight_darkPurple</color>

  <color name="skylight_launcherIcon_sun">@color/skylight_amber_extraLight</color>
  <color name="skylight_launcherIcon_ground">@color/skylight_darkPurple</color>
  <color name="skylight_launcherIcon_upperSky">@color/skylight_amber</color>
  <color name="skylight_launcherIcon_lowerSky">@color/skylight_amber_extraDark</color>

  <!--LIGHT COLOR THEME-->

  <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
  <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
  <!--selection controls.-->
  <color name="skylight_primary">@color/skylight_deepRed_dark</color>
  <color name="skylight_primaryVariant">@color/skylight_deepRed_extraDark</color>
  <color name="skylight_secondary">@color/skylight_deepRed_dark</color>
  <color name="skylight_secondaryVariant">@color/skylight_deepRed_extraDark</color>

  <!--colorBackground appears behind scrollable content and is used for the default window-->
  <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
  <!--and menus. colorError is used to indicate an error state for components such as-->
  <!--text fields.-->
  <color name="skylight_background">@color/skylight_amber_extraLight</color>
  <color name="skylight_surface">@color/skylight_amber</color>
  <color name="skylight_error">@color/skylight_pink_dark</color>

  <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
  <!--on which they appear.-->
  <color name="skylight_onPrimary">#ffffff</color>
  <color name="skylight_onSecondary">#ffffff</color>
  <color name="skylight_onBackground">#000000</color>
  <color name="skylight_onSurface">#000000</color>
  <color name="skylight_onError">#ffffff</color>

</resources>

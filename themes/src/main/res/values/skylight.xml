<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <public name="Theme.Skylight.DayNight" type="style" />
  <style name="Theme.Skylight.DayNight" parent="Theme.Skylight.Light" />

  <public name="Theme.Skylight" type="style" />
  <style name="Theme.Skylight" parent="Base15.Theme.Skylight" />

  <public name="Theme.Skylight.Light" type="style" />
  <style name="Theme.Skylight.Light" parent="Base15.Theme.Skylight.Light" />

  <public name="Theme.Skylight.Error" type="style" />
  <style name="Theme.Skylight.Error" parent="Theme.Skylight.Light">
    <!--Color attributes -->
    <item name="colorPrimary">?colorOnBackground</item>
    <item name="colorPrimaryVariant">?colorPrimary</item>
    <item name="colorSecondary">?colorPrimary</item>
    <item name="colorSecondaryVariant">?colorSecondary</item>
    <item name="android:colorBackground">@color/skylight_pink_light</item>
    <item name="colorSurface">@color/skylight_pink_dark</item>
    <item name="colorError">@color/skylight_pink_light</item>

    <item name="colorOnPrimary">#ffffff</item>
    <item name="colorOnSecondary">?colorOnPrimary</item>
    <item name="colorOnBackground">#000000</item>
    <item name="colorOnSurface">#ffffff</item>
    <item name="colorOnError">#000000</item>
  </style>

  <public name="Theme.Skylight.Light.Error" type="style" />
  <style name="Theme.Skylight.Light.Error" parent="Theme.Skylight">
    <!--Color attributes -->
    <item name="colorPrimary">?colorOnBackground</item>
    <item name="colorPrimaryVariant">?colorPrimary</item>
    <item name="colorSecondary">?colorPrimary</item>
    <item name="colorSecondaryVariant">?colorSecondary</item>
    <item name="android:colorBackground">@color/skylight_pink_dark</item>
    <item name="colorSurface">@color/skylight_pink_light</item>
    <item name="colorError">@color/skylight_pink_dark</item>

    <item name="colorOnPrimary">#ffffff</item>
    <item name="colorOnSecondary">?colorOnPrimary</item>
    <item name="colorOnBackground">#ffffff</item>
    <item name="colorOnSurface">#000000</item>
    <item name="colorOnError">#ffffff</item>
  </style>

  <!--region Base-->
  <style name="Base15.Theme.Skylight" parent="Theme.MaterialComponents.NoActionBar">
    <!--Color attributes -->
    <item name="colorPrimary">@color/skylight_amber_dark</item>
    <item name="colorPrimaryVariant">@color/skylight_amber</item>
    <item name="colorSecondary">?colorPrimary</item>
    <item name="colorSecondaryVariant">?colorPrimaryVariant</item>
    <item name="android:colorBackground">@color/skylight_darkPurple_dark</item>
    <item name="colorSurface">@color/skylight_darkPurple</item>

    <item name="colorError">@color/skylight_pink_light</item>

    <item name="colorOnPrimary">#000000</item>
    <item name="colorOnSecondary">?colorOnPrimary</item>
    <item name="colorOnBackground">#ffffff</item>
    <item name="colorOnSurface">#ffffff</item>
    <item name="colorOnError">#000000</item>

    <item name="errorTheme">@style/Theme.Skylight.Error</item>

    <!--region Duplicated in both themes-->
    <!--Type attributes-->
    <item name="textAppearanceHeadline1">@style/TextAppearance.Skylight.Headline1</item>
    <item name="textAppearanceHeadline2">@style/TextAppearance.Skylight.Headline2</item>
    <item name="textAppearanceHeadline3">@style/TextAppearance.Skylight.Headline3</item>
